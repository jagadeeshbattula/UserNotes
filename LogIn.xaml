<Page x:Class="UserNotes.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserNotes"
      mc:Ignorable="d" 
      Title="LogIn" FontSize="14" Background="#04c582">

    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Label Content="Log In" Foreground="White" FontSize="25" HorizontalAlignment="Center" />
            <Separator/>

            <Label Content="User Name" Foreground="white" />
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>

            <Label Content="Password" Foreground="white" />
            <TextBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"/>

            <Button Name="btnSubmit" Background="#545d6a" Foreground="White" FontSize="18" Content="Submit" Margin="60,10" Click="btnSubmit_Click"/>

        </StackPanel>
    </Border>
</Page>
