<Page x:Class="UserNotes.UserHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserNotes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserHome" Height="450" Width="450" FontSize="14" Background="#04c582">

    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">

            <Label Content="Welcome to Your Home Page" Foreground="White" FontSize="25" HorizontalAlignment="Center" />
            <Separator/>

            <DataGrid Name="gridUserNotes" AutoGenerateColumns="False" Background="#545d6a">

                <DataGrid.Columns>

                    <DataGridTextColumn x:Name="Note" Binding="{Binding note}"/>
                    
                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>
    </Border>
    

</Page>
